{
  "name": "automation-assignment",
  "version": "1.0.0",
  "description": "Comprehensive automation framework using Playwright and JavaScript",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:dev": "cross-env TEST_ENV=dev playwright test",
    "test:staging": "cross-env TEST_ENV=staging playwright test",
    "test:prod": "cross-env TEST_ENV=prod playwright test",
    "test:headed": "playwright test --headed",
    "test:headed:dev": "cross-env TEST_ENV=dev playwright test --headed",
    "test:headed:staging": "cross-env TEST_ENV=staging playwright test --headed",
    "test:headed:prod": "cross-env TEST_ENV=prod playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:debug:dev": "cross-env TEST_ENV=dev playwright test --debug",
    "test:debug:staging": "cross-env TEST_ENV=staging playwright test --debug",
    "test:debug:prod": "cross-env TEST_ENV=prod playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:ui:dev": "cross-env TEST_ENV=dev playwright test --ui",
    "test:ui:staging": "cross-env TEST_ENV=staging playwright test --ui",
    "test:ui:prod": "cross-env TEST_ENV=prod playwright test --ui",
    "test:report": "playwright show-report",
    "test:report:dev": "playwright show-report test-results/dev",
    "test:report:staging": "playwright show-report test-results/staging",
    "test:report:prod": "playwright show-report test-results/prod",
    "test:parallel": "playwright test --workers=4",
    "test:retry": "playwright test --retries=2",
    "test:smoke": "playwright test --grep @smoke",
    "test:smoke:dev": "cross-env TEST_ENV=dev playwright test --grep @smoke",
    "test:smoke:staging": "cross-env TEST_ENV=staging playwright test --grep @smoke",
    "test:smoke:prod": "cross-env TEST_ENV=prod playwright test --grep @smoke",
    "test:regression": "playwright test --grep @regression",
    "test:regression:dev": "cross-env TEST_ENV=dev playwright test --grep @regression",
    "test:regression:staging": "cross-env TEST_ENV=staging playwright test --grep @regression",
    "test:regression:prod": "cross-env TEST_ENV=prod playwright test --grep @regression",
    "test:chrome": "playwright test --project=chrome",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=safari",
    "test:mobile": "playwright test --project=mobile-chrome",
    "test:all": "playwright test --project=chrome --project=firefox --project=safari",
    "test:all:dev": "cross-env TEST_ENV=dev playwright test --project=chrome --project=firefox --project=safari",
    "test:all:staging": "cross-env TEST_ENV=staging playwright test --project=chrome --project=firefox --project=safari",
    "test:all:prod": "cross-env TEST_ENV=prod playwright test --project=chrome --project=firefox --project=safari",
    "install:browsers": "playwright install",
    "setup:env": "node scripts/setup-env.js",
    "run:dev": "node tests/utils/run-tests.js dev",
    "run:staging": "node tests/utils/run-tests.js staging",
    "run:prod": "node tests/utils/run-tests.js prod",
    "codegen": "playwright codegen",
    "codegen:dev": "cross-env TEST_ENV=dev playwright codegen",
    "codegen:staging": "cross-env TEST_ENV=staging playwright codegen",
    "codegen:prod": "cross-env TEST_ENV=prod playwright codegen",
    "trace": "playwright show-trace"
  },
  "keywords": [
    "playwright",
    "automation",
    "testing",
    "e2e",
    "javascript"
  ],
  "author": "Automation Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "allure-playwright": "^2.10.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "faker": "^6.6.6",
    "moment": "^2.29.4",
    "winston": "^3.11.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "csv-parser": "^3.0.0",
    "exceljs": "^4.4.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4"
  }
}
